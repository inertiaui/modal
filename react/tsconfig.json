{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": false,
        "noImplicitAny": false,
        "declaration": true,
        "declarationDir": "./dist",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["DOM", "ES2020"],
        "outDir": "./dist",
        "jsx": "react-jsx",
        "types": ["vite/client"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
    "exclude": ["node_modules", "dist", "tests"]
}
